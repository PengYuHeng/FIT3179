{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "A bar chart that sorts the y-values by the x-values.",
    "data": {"url": "https://raw.githubusercontent.com/PengYuHeng/FIT3179/main/main_data/bar_chart.csv"},
    "title": {
        "text": "Top 10 Countries with the most cases from 2005 - 2018",
        "fontSize": 18
      },
    "mark": "bar",
    "encoding": {
      "y": {
        "field": "country",
        "type": "ordinal",
        "sort": "-x",
        "title":""
      },
      "x": {
        "aggregate": "sum",
        "field": "cases",
        "title":""
      }
    }
  }
  